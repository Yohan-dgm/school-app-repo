{
  "expo": {
    "name": "School App",
    "slug": "school-app",
    "scheme": "school-app",
    "version": "1.0.1",
    "orientation": "default",
    // "orientation": "portrait",
    "icon": "src/assets/SchooSnap_logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "src/assets/SchooSnap_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false,
        "UIStatusBarStyle": "UIStatusBarStyleDefault",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to upload profile pictures",
        "NSCameraUsageDescription": "This app needs access to camera to take profile pictures",
        "UIApplicationSupportsIndirectInputEvents": true,
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSAllowsArbitraryLoadsInWebContent": true,
          "NSAllowsLocalNetworking": true,
          "NSExceptionDomains": {
            "172.20.10.3": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionMinimumTLSVersion": "1.0",
              "NSIncludesSubdomains": true,
              "NSExceptionRequiresForwardSecrecy": false
            },
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionMinimumTLSVersion": "1.0",
              "NSIncludesSubdomains": true,
              "NSExceptionRequiresForwardSecrecy": false
            }
          }
        },
        "ITSAppUsesNonExemptEncryption": false
      },
      "buildNumber": "16",
      "bundleIdentifier": "lk.toyar.schoolapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "src/assets/SchooSnap_logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "lk.toyar.schoolapp",
      "versionCode": 6,
      "compileSdkVersion": 35,
      "targetSdkVersion": 35,
      "minSdkVersion": 21,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.VIBRATE",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "statusBarStyle": "dark-content",
      "statusBarTranslucent": true,
      "navigationBarStyle": "dark-content",
      "navigationBarColor": "#ffffff",
      "navigationBarTranslucent": true,
      "enableEdgeToEdge": true,
      "allowBackup": false,
      "blocksScreenshots": true,
      "usesCleartextTraffic": false,
      "networkSecurityConfig": "@xml/network_security_config"
    },
    "app_logo": {
      "favicon": "src/assets/SchooSnap_logo.png"
    },
    "web": {
      "favicon": "src/assets/favicon.png"
    },
    "plugins": ["expo-router", "expo-navigation-bar"],
    "extra": {
      "router": {},
      "expo-navigation-bar": {},
      "eas": {
        "projectId": "c497b33a-59ce-4ea9-ae5a-ca16190babdd"
      }
    },
    "owner": "yohan.dgm"
  }
}
